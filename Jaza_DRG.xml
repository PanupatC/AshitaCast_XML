	<variables>
		<var name="mode">haste</var>
		<var name="modews">askar</var>
	</variables>

	<inputcommands>
		<cmd input="/healbreath">
			<!-- <if p_joblevel=">59">
				<if p_hpp="<50"> <command delay="100">/ma "Dia" &lt;t&gt;</command> </if>
			</if>
			<else>
				<if p_hpp="<33"> <command delay="100">/ma "Dia" &lt;t&gt;</command> </if>
			</else> -->
		</cmd>

		<cmd input="/penta">
			<if p_joblevel="<49"> <command>/ws "Double Thrust" &lt;t&gt;</command></if>
			<else>                <command>/ws "Penta Thrust" &lt;t&gt;</command> </else>
		</cmd>

		<cmd input="/invis">
			<if p_subjob="nin"> <command>/ma "Tonko: Ichi" &lt;me&gt;</command> </if>
			<else>              <command>/ma "Invisible" &lt;stpc&gt;</command> </else>
		</cmd>
		<cmd input="/sneak">
			<if p_subjob="nin"> <command>/ma "Monomi: Ichi" &lt;me&gt;</command> </elseif>
			<else>              <command>/ma "Sneak" &lt;stpc&gt;</command> </else>
		</cmd>
		
		<cmd input="/mode">
			<if advanced="$mode=haste"><setvar name="mode" value="survive" /></if>
			<else>                     <setvar name="mode" value="haste" /></else>
			<command>/echo Set mode => $mode</command>
		</cmd>
		<cmd input="/modews">
			<if advanced="$modews=heca"><setvar name="modews" value="askar" /></if>
			<else>                     <setvar name="modews" value="heca" /></else>
			<command>/echo Set modeWS => $modews</command>
		</cmd>

	</inputcommands>

	<idlegear>
		<if p_joblevel=">72">
			<equip set="idle" />
			<if p_status="engaged">
				<if p_ismoving="true"></if>
				<else>
					<equip set="haste" />
				</else>
				<if advanced="$mode=survive">
					<equip set="survive" />
				</if>
			</if>
		</if>
		<else>
			<if p_joblevel=">71">     <equip set="idle72" /> </if>
			<elseif p_joblevel=">68"> <equip set="idle69" /> </elseif>
			<elseif p_joblevel=">64"> <equip set="idle65" /> </elseif>
			<elseif p_joblevel=">62"> <equip set="idle63" /> </elseif>
			<elseif p_joblevel=">60"> <equip set="idle61" /> </elseif>
			<elseif p_joblevel=">59"> <equip set="idle60" /> </elseif>
			<elseif p_joblevel=">58"> <equip set="idle59" /> </elseif>
			<elseif p_joblevel=">55"> <equip set="idle56" /> </elseif>
			<elseif p_joblevel=">54"> <equip set="idle55" /> </elseif>
			<elseif p_joblevel=">37"> <equip set="idle38" /> </elseif>
			<elseif p_joblevel=">35"> <equip set="idle36" /> </elseif>
		</else>
    </idlegear>

